@model OliviasBank.ViewModels.TransferViewModel

@{
    ViewData["Title"] = "Transfer";
}

<h2>Transfer</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div>
        @Model.Message
    </div>
}

<form method="post">
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <div class="form-group">
                <label asp-for="FromAccountId"></label>
                <input class="form-control" asp-for="FromAccountId" />
                <span class="text-danger" asp-validation-for="FromAccountId"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToAccountId"></label>
                <input class="form-control" asp-for="ToAccountId" />
                <span class="text-danger" asp-validation-for="ToAccountId"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sum"></label>
                <input class="form-control" asp-for="Sum" />
                <span class="text-danger" asp-validation-for="Sum"></span>
            </div>
            <div class="form-group">
                <label asp-for="FromAccountBalance"></label>
                <input asp-for="FromAccountBalance" id="input-actual-sum" type="hidden" value="@Model.FromAccountBalance" />
                <p id="actual-sum" class="form-control form-control-static">@Model.FromAccountBalance</p>
                <span id="actual-sum-validation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToAccountBalance"></label>
                <input asp-for="ToAccountBalance" id="input-actual-sum" type="hidden" value="@Model.ToAccountBalance" />
                <p id="actual-sum" class="form-control form-control-static">@Model.ToAccountBalance</p>
                <span id="actual-sum-validation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Transfer" formaction="/bank/transfer" />
            </div>
            @*<div class="form-group">
                    <label asp-for="ResultSumString"></label>
                    <p id="result-sum" class="form-control form-control-static">@Model.ResultSumString</p>
                </div>*@
        </div>
    </div>
</form>
